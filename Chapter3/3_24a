//Exercise 3.24: Redo the last exercise from ยง 3.3.3 (p. 105) using iterators.
//    Exercise 3.20: 
//    Read a set of integers into a vector. Print the sum of each
//    pair of adjacent elements. Change your program so that it prints the sum of
//    the first and last

#include <iostream>
#include <vector>

using std::cout; using std::cin; using std::endl; using std::vector; 


int main()
{
    vector<int> ivec;
    
    for (int i; cin >> i; ivec.push_back(i));
    auto start = ivec.begin();
   
    
    if (!ivec.empty())
    {
      for (auto start = ivec.begin(); start != ivec.end() -1; ++start)
          cout << *start + *(start + 1) << " " << endl;
            
      cout << endl;
                     
      
        
    }
    
    
    else cout << "Vector is empty" << endl;
    
    
    
    
    
    return 0;    
    
}
