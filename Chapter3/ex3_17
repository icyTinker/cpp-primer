//Exercise 3.17: 
//Read a sequence of words from cin and store the values a
//vector. After youâ€™ve read all the words, process the vector and change
//each word to uppercase. Print the transformed elements, eight words to a
//line.

#include <iostream>
#include <string>
#include <vector>
#include <cctype>
using std::cin; using std::cout; using std::vector; using std::string;
using std::endl; 

int main()
{
    
    // read cin and store in a vector
    
    string words;
    vector<string> ivec;
    
    while (cin >> words)
        ivec.push_back(words);
            
    //iterate through vector elements, then string elements to capitalize 
    
  
    for (auto &vref : ivec)
    {
        for (auto &sref : vref)
        {
            sref = toupper(sref);     
        }
        
    }
    
    //output word, space, word, space for 8 words    
    //int wordcount = ivec.size();
    
    int start = 0;
    int const cluster_size = 8;
    int range = 8;
    int cluster_num = (ivec.size() / cluster_size);
    int remainder = 
    
        
        for (int i = 0; i < cluster_num; ++i ) //need to loop through the clusternum
        { 
            for (int n = start; n < range; ++n)
            {
                cout << ivec[n] << " ";
                ++start;
            }
        
            range = start + cluster_size;
            cout << endl;
        }
    
    
        
    return 0;

}
